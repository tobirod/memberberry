<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="ViewModel" type="com.newton.tr.member.models.ViewModel" />
    </data>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/itemCheckBox"
            android:ellipsize="marquee"
            android:fontFamily="@font/komika_text"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="5dp"
            android:text="@string/placeholder_item_name"
            android:textAllCaps="false"
            android:textColor="@color/charcoal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/itemCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:buttonTint="@color/grape"
            android:padding="10dp" />

    </RelativeLayout>
</layout>